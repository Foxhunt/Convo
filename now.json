{
    "name": "convos.art",
    "alias": [
      "convos.art"
    ],
    "version": 2,
    "regions": ["all"],
    "builds": [
        { "src": "www/package.json", "use": "@now/next" },
        { "src": "app.js", "use": "@now/node-server" }
    ],
    "routes": [
        {
          "src": "/api/(.*)",
          "dest": "app.js"
        },
        {
          "src": "/(.*)",
          "dest": "/www/$1",
          "headers": {
            "x-request-path": "$1"
          }
        }
    ]
  } 
  